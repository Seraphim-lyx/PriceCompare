<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avRL"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >   
       <com.pricecompare.util.MyScrollView
           android:id="@+id/avScrollView"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:paddingBottom="15dp">
            <RelativeLayout
           android:id="@+id/avR"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">
           <com.pricecompare.util.InsideViewPager
               android:id="@+id/avView_pager"
               android:layout_width="wrap_content"
               android:layout_height="400dp">
               </com.pricecompare.util.InsideViewPager>
           <TextView
               android:id="@+id/avDescription"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="商品简介"
               android:layout_below="@+id/avView_pager"
               android:layout_alignParentLeft="true" />
           <TextView    
               android:id="@+id/avDescript"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/avDescription"
               android:layout_alignParentLeft="true" />
           <TextView
                   android:id="@+id/avComment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商品评论\n"
                   android:layout_below="@+id/avDescript"
                   android:layout_marginTop="10dp"
                   android:layout_alignParentLeft="true" />
           
           <ListView
               android:id="@+id/avCommentList"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/avComment"
               android:paddingLeft="@dimen/list_padding"
               android:paddingRight="@dimen/list_padding" />
           </RelativeLayout>
           </com.pricecompare.util.MyScrollView> 
        <LinearLayout   
        android:id="@+id/avButtonLayout"  
        android:layout_alignParentBottom="true" 
        android:background="#ffffff" 
        android:layout_height="wrap_content"  
        android:layout_width="fill_parent"
        android:orientation="horizontal">  
       <Button
           android:gravity="clip_vertical" 
           android:id="@+id/avButtonBuy"
           android:text="前往购买"
           android:layout_width="wrap_content"  
           android:layout_marginLeft="10px"     
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"/>
       </LinearLayout>
       </RelativeLayout>